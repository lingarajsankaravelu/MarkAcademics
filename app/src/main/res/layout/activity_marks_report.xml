<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hourglass.lingaraj.markacademics.marksReport">
    <RelativeLayout
        android:id="@+id/marksheet_heading"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marks Report"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/academic_selection"
        android:layout_below="@+id/marksheet_heading"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/test_listView"
            android:layout_width="100dp"
            android:clickable="true"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_toRightOf="@+id/test_listView"
            android:layout_toEndOf="@+id/test_listView"
            android:id="@+id/marks_report_frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


    </RelativeLayout>



</RelativeLayout>
